<?xml version="1.0"?>
<project>
    <pomVersion>3</pomVersion>
    <id>struts-menu</id>
    <name>Struts Menu</name>
    <groupId>struts-menu</groupId>
    <currentVersion>2.4.3</currentVersion>

    <organization>
        <name>SourceForge</name>
        <url>http://struts-menu.sourceforge.net/</url>
    </organization>

    <inceptionYear>2003</inceptionYear>
    <package>net.sf.navigator</package>
    <logo>/images/sm-logo.png</logo>
    
    <description>
        This application allows creation of many different
        menu systems from an XML file or dynamically from a database.
    </description>
    <shortDescription>
        Struts Menu is a navigation system for web applications.
    </shortDescription>

    <url>http://struts-menu.sourceforge.net</url>
    <issueTrackingUrl>http://issues.appfuse.org/browse/SM</issueTrackingUrl>
    <siteAddress>shell.sourceforge.net</siteAddress>
    <siteDirectory>/home/groups/s/st/struts-menu/htdocs</siteDirectory>
    <distributionDirectory>/home/groups/s/st/struts-menu/htdocs/builds/</distributionDirectory>

    <repository>
        <connection>scm:cvs:pserver:anonymous@struts-menu.cvs.sourceforge.net:/cvsroot/struts-menu:navigator</connection>
        <developerConnection>scm:cvs:ext:${maven.username}@struts-menu.cvs.sourceforge.net:/cvsroot/struts-menu:navigator</developerConnection>
        <url>http://struts-menu.cvs.sourceforge.net/struts-menu/navigator/</url>
    </repository>

